//if-then-else if-else
package test4;
public class test4{
	public static void main(String args[]){
		int testscore = 76;
		char grade =0;
		//in eclipse, you actually have to initialize the grade
		if (testscore>90) {
			grade='A';
		} else if (testscore < 80){
			grade ='B';
		}
		System.out.println("The student has a grade " + grade);
	}
}

